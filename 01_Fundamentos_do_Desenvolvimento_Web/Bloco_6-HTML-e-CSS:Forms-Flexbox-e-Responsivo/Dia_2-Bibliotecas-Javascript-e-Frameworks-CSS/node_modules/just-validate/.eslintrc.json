{
  "plugins": [
    "standard",
    "promise"
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "fetch": true,
    "describe": true,
    "it": true,
    "assert": true
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "no-tabs": 0,
    "no-var": "error",
    "no-confusing-arrow": 0,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "max-len": [
      "error",
      120
    ],
    "linebreak-style": 0
  }
}
